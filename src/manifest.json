{
  "manifest_version": 3,
  "name": "我的投资助手",
  "version": "0.0.3",
  "description": "获取数据、提示持仓",
  "default_locale": "zh_CN",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://xueqiu.com/S/*",
        "https://quote.eastmoney.com/*",
        "https://youzhiyouxing.cn/*"
      ],
      "js": [
        "js/content_youzhiyouxing.js"
      ]
    },
    {
      "matches": [
        "https://trade.ehowbuy.com/*"
      ],
      "js": [
        "js/content_haomai.js"
      ]
    },
    {
      "matches": [
        "https://stock.cheesefortune.com/pepChat*"
      ],
      "js": [
        "js/content_cheesefortune.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "*://*.baidu.com/*"
  ]
}